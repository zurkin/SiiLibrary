<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="libPU" transaction-type="JTA">
        <jta-data-source>jdbc/app_library</jta-data-source>
        <class>pl.sii.core.entity.Book</class>
        <class>pl.sii.core.entity.Author</class>
    
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.max_fetch_depth" value="3"/>
            <property name="hibernate.hbm2ddl.auto" value="false"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
        </properties>
    </persistence-unit>
</persistence>
